---
interface Props {
  title?: string;
}

const { title = "Hans International Group" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Hans International Group - Leading the Steel Industry with Excellence"
    />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <footer class="bg-red-900 text-white py-8 px-4">
      <div class="max-w-6xl mx-auto text-center">
        <p class="text-red-200">
          &copy; {new Date().getFullYear()} Hans International Group. All rights
          reserved.
        </p>
      </div>
    </footer>
  </body>
</html>
