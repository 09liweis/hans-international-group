---
interface Props {
	title?: string;
}

const { title = 'Hans International Group' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Hans International Group - Leading the Steel Industry with Excellence" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
